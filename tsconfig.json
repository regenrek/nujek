{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": [
          "esnext",
          "dom",
          "dom.iterable",
          "scripthost",
          "esnext.array"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "paths": {
      "@nujek/shared": ["./packages/shared/src/index.ts"],
      "~/*": ["./*"]
    },
    "types": ["node", "@nuxt/types", "jest"]
  },
  "include": ["packages"],
  "exclude": [
    "node_modules",
    "**/**/*.test.ts",
    "**/**/*.stories.tsx",
    "**/**/*.md",
    "packages/docs"
  ]
}
