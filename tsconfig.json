{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "jest", "./src/types/global"],
    "paths": {
      "~components/*": ["src/runtime/*"],
      "~components": ["src/runtime"],
      "@nujek/shared": ["./packages/shared/src/index.ts"],
      "~/*": ["./*"]
    },
  },
  "include": ["packages"],
  "exclude": [
    "node_modules",
    "**/**/*.test.ts",
    "**/**/*.stories.tsx",
    "**/**/*.md",
    "packages/docs"
  ]
}