{
  "name": "@nujek/monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "storybook"
  ],
  "version": "1.0.0",
  "description": "Nujek - Build Websites with Nuxt.js and Storyblok",
  "scripts": {
    "build": "esno ./scripts/build.ts",
    "build:rollup": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly && npm run types:fix",
    "publish:ci": "esno ./scripts/publish.ts",
    "release": "esno ./scripts/release.js && git push --follow-tags",
    "storybook": "cd storybook && npx nuxt storybook",
    "prettier-format": "prettier --config .prettierrc 'packages/**/*.{js,ts,vue}' --write",
    "clean": "rimraf dist types typings storybook-static packages/*/dist",
    "prepare": "esno ./scripts/update.ts",
    "types:fix": " esno ./scripts/types-fix.ts"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Kevin Regenrek",
  "license": "MIT",
  "devDependencies": {
    "@nuxt/types": "^2.14.12",
    "@nuxtjs/eslint-config": "^5.0.0",
    "@nuxtjs/eslint-module": "^3.0.1",
    "@nuxtjs/module-test-utils": "^1.6.3",
    "babel-eslint": "^10.1.0",
    "consola": "^2.15.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.1.0",
    "esno": "^0.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.35.1",
    "rollup-plugin-dts": "^1.4.14",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.28.0",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "version-bump-prompt": "^6.1.0",
    "vue": "^2.6.12",
    "vue-i18n": "^8.22.2",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12",
    "vue-tsx-support": "^2.3.3"
  }
}
