{
  "name": "@nujek/monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "storybook"
  ],
  "version": "--preid",
  "description": "Nujek - Build Websites with Nuxt.js and Storyblok",
  "scripts": {
    "publish:ci": "esno ./scripts/publish.js",
    "release": "esno ./scripts/release.js && git push --follow-tags",
    "storybook": "cd storybook && npx nuxt storybook",
    "prettier-format": "prettier --config .prettierrc 'packages/**/*.{js,ts,vue}' --write"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Kevin Regenrek",
  "license": "MIT",
  "devDependencies": {
    "@nuxtjs/eslint-config": "^5.0.0",
    "@nuxtjs/eslint-module": "^3.0.1",
    "babel-eslint": "^10.1.0",
    "consola": "^2.15.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.1.0",
    "esno": "^0.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "version-bump-prompt": "^6.1.0"
  }
}
