{
  "name": "@nujek/monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "storybook"
  ],
  "version": "1.0.0",
  "description": "Nujek - Build Websites with Nuxt.js and Storyblok",
  "scripts": {
    "build": "yarn build:siroc",
    "build:siroc": "siroc build && mkdist --src packages/ui/src/runtime --dist packages/ui/dist/runtime && mkdist --src packages/storyblok/src/runtime --dist packages/storyblok/dist/runtime && yarn compile:css",
    "build:sb": "siroc build && mkdist --src packages/storyblok/src/runtime --dist packages/storyblok/dist/runtime",
    "build:ui": "siroc build && mkdist --src packages/ui/src/runtime --dist packages/ui/dist/runtime && yarn compile:css",
    "build:types": "tsc --emitDeclarationOnly && npm run types:fix",
    "publish:ci": "esno ./scripts/publish.ts",
    "publish:ciui": "yarn build:ui && esno ./scripts/publish-ui.ts",
    "publish:cisb": "yarn build:sb && esno ./scripts/publish-storyblok.ts",
    "release": "esno ./scripts/release.js && git push --follow-tags",
    "storybook": "cd storybook && npx nuxt storybook",
    "clean": "rimraf dist types typings storybook-static packages/*/dist",
    "prepare:package": "esno ./scripts/update.ts",
    "types:fix": " esno ./scripts/types-fix.ts",
    "lint:fix": "eslint --fix --ext .js,.jsx,.tsx,.vue",
    "compile:css": "esno ./scripts/styles.js",
    "publish:all": "yarn build && yarn publish:ci",
    "publish:ui": "yarn build && yarn publish:ciui",
    "clean-nm": "rm -rf node_modules && rm -rf packages/ui/node_modules && rm -rf packages/storyblok/node_modules && rm -rf storybook/node_modules && rm -rf storybook/.nuxt-storybook && rm -rf docs/node_modules && yarn && cd docs && yarn && cd .."
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Kevin Regenrek",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.12.13",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-typescript": "^7.12.16",
    "@nuxt/test-utils": "^0.1.3",
    "@nuxt/types": "^2.14.12",
    "@nuxt/typescript-build": "^2.0.4",
    "@nuxt/typescript-runtime": "^2.0.1",
    "@nuxtjs/eslint-config": "^5.0.0",
    "@nuxtjs/eslint-config-typescript": "^5.0.0",
    "@nuxtjs/module-test-utils": "^1.6.3",
    "@types/jest": "^26.0.20",
    "@vue/test-utils": "^1.1.3",
    "babel-eslint": "^10.1.0",
    "consola": "^2.15.0",
    "eslint": "^7.19.0",
    "esno": "^0.3.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^10.4.0",
    "mkdist": "^0.1.1",
    "nuxt-edge": "^2.15.0-26884835.04646c5e",
    "playwright": "^1.8.1",
    "postcss": "^8.2.6",
    "rimraf": "^3.0.2",
    "rm": "^0.1.8",
    "rollup-plugin-postcss": "^4.0.0",
    "siroc": "^0.6.5",
    "standard-version": "^9.1.0",
    "tachyons-build-css": "^1.8.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.3"
  }
}
