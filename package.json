{
  "name": "@nujek/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Nujek - Build Websites with Nuxt.js and Storyblok",
  "license": "MIT",
  "author": "Kevin Regenrek",
  "scripts": {
    "build": "esno ./scripts/build.ts",
    "publish:ci": "esno ./scripts/publish.ts",
    "release": "pnpm publish:ci --release-only",
    "clean:nm": "esno ./scripts/clean.ts",
    "build:sb": "pnpm build sb",
    "build:ui": "pnpm build ui",
    "publish:ui": "pnpm publish:ci ui",
    "publish:sb": "pnpm publish:ci storyblok",
    "clean": "rimraf dist types typings packages/*/dist",
    "types:fix": "esno ./scripts/types-fix.ts",
    "lint:fix": "eslint --fix --ext .js,.jsx,.tsx,.vue",
    "lint": "esno ./scripts/lint.ts",
    "test:unit": "esno ./scripts/test-unit.ts",
    "test:e2e": "esno ./scripts/test-e2e.ts",
    "compile:css": "esno ./scripts/styles.ts",
    "build:types": "tsc --emitDeclarationOnly && npm run types:fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --fix"
  },
  "devDependencies": {
    "@babel/core": "latest",
    "@babel/eslint-parser": "latest",
    "@babel/plugin-proposal-optional-chaining": "^7.12.13",
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "@babel/preset-env": "latest",
    "@babel/preset-typescript": "^7.12.16",
    "@nuxt/types": "^2.14.12",
    "@nuxt/typescript-build": "^2.0.4",
    "@nuxt/typescript-runtime": "^2.0.1",
    "@nuxtjs/eslint-config": "latest",
    "@nuxtjs/eslint-config-typescript": "^5.0.0",
    "@playwright/test": "^1.14.1",
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-service": "^4.5.13",
    "babel-core": "7.0.0-bridge.0",
    "bumpp": "^7.1.1",
    "consola": "^2.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "esno": "^0.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mkdist": "^0.1.1",
    "nuxt-edge": "latest",
    "playwright": "latest",
    "postcss": "^8.2.6",
    "rimraf": "^3.0.2",
    "rm": "^0.1.8",
    "rollup-plugin-postcss": "^4.0.0",
    "siroc": "^0.6.5",
    "standard-version": "latest",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=14"
  }
}
