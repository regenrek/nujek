{
  "name": "@nujek/monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "storybook"
  ],
  "version": "1.0.0",
  "description": "Nujek - Build Websites with Nuxt.js and Storyblok",
  "scripts": {
    "build": "esno ./scripts/build.ts",
    "build:rollup": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly && npm run types:fix",
    "publish:ci": "esno ./scripts/publish.ts",
    "release": "esno ./scripts/release.js && git push --follow-tags",
    "storybook": "cd storybook && npx nuxt storybook",
    "clean": "rimraf dist types typings storybook-static packages/*/dist",
    "prepare:package": "esno ./scripts/update.ts",
    "types:fix": " esno ./scripts/types-fix.ts",
    "lint:fix": "eslint --fix --ext .js,.jsx,.tsx,.vue ."
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Kevin Regenrek",
  "license": "MIT",
  "dependencies": {
    "vue": "^2.6"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.12.13",
    "@nuxt/types": "^2.14.12",
    "@nuxtjs/eslint-config": "^5.0.0",
    "@nuxtjs/eslint-module": "^3.0.1",
    "@nuxtjs/module-test-utils": "^1.6.3",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.2.3",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/vue": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "@vue/cli-plugin-babel": "~4.5.9",
    "@vue/cli-plugin-eslint": "~4.5.9",
    "@vue/cli-plugin-typescript": "~4.5.9",
    "@vue/cli-plugin-unit-jest": "^4.5.9",
    "@vue/cli-service": "~4.5.9",
    "@vue/compiler-sfc": "^3.0.4",
    "@vue/eslint-config-airbnb": "^5.1.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-eslint": "^10.1.0",
    "consola": "^2.15.0",
    "eslint": "^7.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-vue": "^7.2.0",
    "esno": "^0.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.5",
    "rollup-plugin-dts": "^1.4.14",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.28.0",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-plugin-vue": "^6.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "version-bump-prompt": "^6.1.0",
    "vue": "^2.6.12",
    "vue-i18n": "^8.22.2",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12",
    "vue-tsx-support": "^2.3.3"
  }
}
